{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "type": "template-form",
                  "name": "form0",
                  "components": [
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Match Day Name",
                              "component": "MatchDayName",
                              "name": "MatchDayNameLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "maxLength": 50,
                              "type": "textbox",
                              "name": "MatchDayName",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${matchday.MatchDayName}"
                            },
                            {
                              "type": "required-validator",
                              "name": "MatchDayNameRequiredValidator",
                              "component": "MatchDayName",
                              "text": "MatchDayName is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "components": [
                        {
                          "type": "col",
                          "class": "col offset-sm-3",
                          "components": [
                            {
                              "type": "button",
                              "buttonType": "submit",
                              "icon": "save",
                              "text": "Save",
                              "buttonStyle": "primary"
                            },
                            {
                              "type": "button",
                              "buttonStyle": "light",
                              "style": {
                                "marginLeft": "1rem"
                              },
                              "text": "Cancel",
                              "events": {
                                "click": [
                                  {
                                    "type": "close-popup"
                                  }
                                ]
                              }
                            }
                          ]
                        }
                      ]
                    }
                  ],
                  "events": {
                    "submit": [
                      {
                        "error": [
                          {
                            "detail": "Unable to create new MatchDay!",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "ConData.createMatchDay",
                        "parameters": [
                          {
                            "name": "MatchDay",
                            "value": "${matchday}"
                          }
                        ],
                        "then": [
                          {
                            "type": "close-popup",
                            "result": "${matchday}"
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  },
                  "data": "${matchday}",
                  "visible": "${matchday != null}",
                  "itemType": "VirtualLeague.Models.ConData.MatchDay"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "matchday",
        "type": "set",
        "value": "new VirtualLeague.Models.ConData.MatchDay(){}",
        "valueType": "VirtualLeague.Models.ConData.MatchDay"
      }
    ]
  },
  "name": "Add Match Day",
  "layout": "Main"
}